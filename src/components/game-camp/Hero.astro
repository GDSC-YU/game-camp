---
import { Icon } from "astro-icon";

import { logos } from "../../data/logos";
---

<section
  id="landing"
  class="flex flex-col items-center justify-center p-5 md:py-24"
>
  <div
    class="flex flex-col gap-7 rounded-lg bg-gray-900/70 px-3 py-6 text-center md:max-w-4xl md:gap-9 md:bg-gray-900/90"
  >
    <h1 class="text-3xl font-semibold md:text-6xl">Game Camp?</h1>
    <p class="font-medium leading-7 md:text-xl md:leading-10">
      It is a six-day game development camp that equips students and game dev
      enthusiasts to develop their own games through a variety of workshops,
      while also competing to create a winning game! ğŸ†ğŸ•¹ï¸
    </p>

    <!-- Signing Up Icons -->

    <div class="flex flex-col items-center justify-center gap-6 text-center">
      <p class="flex gap-2 text-lg font-semibold md:text-xl">
        Sign Up <Icon name="fa-solid:hand-point-down" class="h-6" />
      </p>
      <!-- Icons -->
      <div class="flex flex-col gap-6 md:flex-row">
        <a href="#" target="_blank" class="flex gap-2 hover:scale-110">
          <Icon name="fa-solid:user-circle" class="h-6" /> as a participant
        </a>
        <a href="#" target="_blank" class="flex gap-2 hover:scale-110">
          <Icon name="fa-solid:hands-helping" class="h-6" /> as a volunteer
        </a>
      </div>
    </div>
    <!-- logos section -->
    <div
      class="grid grid-cols-3 items-center justify-items-center md:grid-cols-6"
    >
      {
        logos.map((logo) => {
          return (
            <a
              href={logo.href}
              target="_blank"
              class="transform p-2 drop-shadow-xl transition duration-300 hover:scale-75"
            >
              <img class="w-16 md:w-20" src={logo.src} alt={logo.name} />
            </a>
          );
        })
      }
    </div>
  </div>
</section>
