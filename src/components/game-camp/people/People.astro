---
import SectionTitle from "../ui/SectionTitle.astro";
import ExpertCard from "./ExpertCard.astro";
// data
import { judges, consultants } from "../../../data/people";
---

<section id="people">
  <div class="sectiondiv">
    <SectionTitle title="Judges 🧑‍⚖️ & Consultants 🧑‍💻" />
    <div
      class="grid w-full justify-items-center gap-y-4 md:grid-cols-2 lg:grid-cols-3"
    >
      {
        judges.map((dude) => {
          return (
            <>
              <ExpertCard
                name={dude.name}
                img={dude.image}
                position={dude.position}
              />
            </>
          );
        })
      }
      {
        consultants.map((dude) => {
          return (
            <>
              <ExpertCard
                name={dude.name}
                img={dude.image}
                position={dude.position}
              />
            </>
          );
        })
      }
    </div>
  </div>
</section>
