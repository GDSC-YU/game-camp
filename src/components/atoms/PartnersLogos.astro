---
import { Image } from "astro:assets";

import { logos } from "@data";
---

<div class="grid grid-cols-4 items-center justify-items-center gap-x-2">
  {
    [...logos].reverse().map((logo) => {
      return (
        <a
          href={logo.href}
          target="_blank"
          class="p-2 transition duration-300 ease-in-out hover:scale-75"
        >
          <Image
            src={logo.image}
            alt={logo.name}
            class={`w-20 ${logo.bright ? " brightness-200 " : ""}`}
          />
        </a>
      );
    })
  }
</div>
