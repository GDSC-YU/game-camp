---
import DesktopNav from "@molecules/DesktopNav.astro";
import MobileNav from "@molecules/MobileNav.astro";
---

<header>
  <DesktopNav />
  <MobileNav />
</header>

<script>
  if (window.innerWidth >= 1024) {
    const navbar = document.querySelector("nav ul") as HTMLElement;

    window.addEventListener("scroll", () => {
      if (window.scrollY > 10) {
        navbar.classList.add("bg-gray-900/80");
      } else {
        navbar.classList.remove("bg-gray-900/80");
      }
    });
  }
</script>
